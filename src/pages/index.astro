---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import ContactForm from "../components/ContactForm.astro";
import CallToAction from "../components/CallToAction.astro";
import BlogEntries from "../components/BlogEntries.astro";
import Reviews from "../components/Reviews.astro";
import type { CTA } from "../interfaces";

import cta1 from "../assets/cta-index-1.avif";
import cta2 from "../assets/cta-index-2.avif";

const CTAs: CTA[] = [
  {
    title: "Empieza a escalar hoy mismo",
    description:
      "¿Primera vez? No te preocupes. Tenemos clases guiadas pensadas para ti, con equipo incluido y un ambiente seguro para aprender desde cero. Solo necesitas ganas de moverte y pasarlo bien.",
    imgUrl: cta1,
    hasButton: true,
    eager: true,
    buttonText: "Empieza ya",
    buttonLink: "/contact",
  },
  {
    title: "Haz parte de la comunidad escaladora",
    description:
      "Ven por la escalada, quédate por la gente. Aquí no solo entrenas: compartes retos, celebras logros y creces junto a otros que aman escalar tanto como tú.",
    imgUrl: cta2,
    hasButton: true,
    buttonText: "Únete hoy",
    buttonLink: "/contact",
    reverse: true,
  },
];
---

<MainLayout title="Inicio">
  <Hero
    title="Bienvenido a Climbing Academy"
    description="Únete a nuestra academia de escalada. Clases para todos los niveles con instructores calificados."
    primaryButtonText="Comencemos"
    secondaryButtonText="Saber más"
  />
  {
    CTAs.map((cta) => (
      <CallToAction
        title={cta.title}
        description={cta.description}
        imgUrl={cta.imgUrl}
        eager={cta.eager}
        reverse={cta?.reverse}
        hasButton={cta?.hasButton}
        buttonText={cta?.buttonText}
        buttonLink={cta?.buttonLink}
      />
    ))
  }
  <Reviews />
  <ContactForm />
  <BlogEntries />
</MainLayout>
