---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import ContactForm from "../components/ContactForm.astro";
import CallToAction from "../components/CallToAction.astro";
import BlogEntries from "../components/BlogEntries.astro";
---

<MainLayout title="Inicio">
  <Hero
    title="Bienvenido a Climbing Academy"
    description="Únete a nuestra academia de escalada. Clases para todos los niveles con instructores calificados."
    primaryButtonText="Comencemos"
    secondaryButtonText="Saber más"
  />
  <CallToAction
    title="Aprende y practica escalada en roca"
    description="No vayas a la roca con cualquiera, escala con escaladores. Vive una experiencia emocionante y segura con nosotros."
    imgUrl="https://images.unsplash.com/photo-1570328477202-2414f1da1f31?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
    hasButton
    buttonText="Inicia hoy"
    buttonLink="/contact"
  />
  <BlogEntries />
  <ContactForm />
</MainLayout>
