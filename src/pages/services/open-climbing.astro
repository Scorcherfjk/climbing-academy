---
import MainLayout from "../../layouts/MainLayout.astro";
import Hero from "../../components/Hero.astro";
import CallToAction from "../../components/CallToAction.astro";
import ContactForm from "../../components/ContactForm.astro";
import type { CTA } from "../../interfaces";

import cta1 from "../../assets/cta-academy-4.avif";
import cta2 from "../../assets/cta-service-2.avif";
import cta3 from "../../assets/cta-academy-3.avif";

const CTAs: CTA[] = [
  {
    title: "Escalada libre a tu propio ritmo",
    description:
      "Si ya tienes experiencia o prefieres escalar a tu manera, nuestra sesión de escalada libre es ideal para ti. Disfruta de la pared sin necesidad de instructor, y desafía tus límites en el momento que más te inspire.",
    imgUrl: cta1,
    eager: true,
  },
  {
    title: "Equipo disponible para alquiler",
    description:
      "No necesitas traer nada. Alquila pies de gato, colchonetas y todo el material necesario para que te concentres solo en escalar, sin preocupaciones.",
    imgUrl: cta2,
    reverse: true,
  },
  {
    title: "Escala todo el tiempo que quieras",
    description:
      "No hay límite de tiempo, así que puedes quedarte el tiempo que necesites para explorar, practicar y disfrutar de la escalada a tu propio ritmo. Perfecto para quienes buscan flexibilidad y autonomía.",
    imgUrl: cta3,
  },
];
---

<MainLayout title="Servicios">
  <Hero
    title="Escalada Abierta"
    description="Únete a nuestra escalada abierta, practica y mejora tus habilidades a tu propio ritmo."
    secondaryButtonText="Contáctanos"
  />
  {
    CTAs.map((cta) => (
      <CallToAction
        title={cta.title}
        description={cta.description}
        imgUrl={cta.imgUrl}
        reverse={cta?.reverse}
        eager={cta?.eager}
      />
    ))
  }
  <ContactForm />
</MainLayout>
